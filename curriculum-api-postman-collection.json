      "name": "1. Create Curriculum",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "var jsonData = pm.response.json();",
              "",
              "pm.test(\"Response status is SUCCESS\", function () {",
              "    pm.expect(jsonData.status).to.eql(\"SUCCESS\");",
              "});",
              "",
              "pm.test(\"Payload contains ID\", function () {",
              "    pm.expect(jsonData.payload).to.have.property('id');",
              "    // Save the ID to a variable for use in other requests",
              "    pm.collectionVariables.set(\"curriculumId\", jsonData.payload.id);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": 101,\n  \"mobilePhone\": \"+39 123 456 7890\",\n  \"homeAddress\": \"123 Main St, Turin, Italy\",\n  \"workAddress\": \"456 Tech Park, Milan, Italy\",\n  \"maritalStatus\": false,\n  \"hasCar\": true,\n  \"openForTravel\": true,\n  \"summary\": \"Senior Java Developer with 5 years of experience.\",\n  \"drivingLicense\": \"B\",\n  \"educationHistory\": [\n    {\n      \"schoolNameId\": 10,\n      \"degreeNameId\": 5,\n      \"grade\": 105,\n      \"maxGrade\": 110,\n      \"startDate\": \"2015-09-01\",\n      \"endDate\": \"2018-07-20\"\n    }\n  ],\n  \"projects\": [\n    {\n      \"startDate\": \"2019-01-01\",\n      \"endDate\": \"2020-01-01\",\n      \"description\": \"E-commerce platform backend development.\"\n    }\n  ],\n  \"domainOptions\": []\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/curriculums",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "curriculums"
          ]
        },
        "description": "Creates a new curriculum. Requires a `userId` and other profile details. The response ID is saved to the `curriculumId` variable."
